{
  "name": "api-threat-assessment-backend",
  "version": "1.0.0",
  "description": "Express API for AT-AT (API Threat Assessment Tool) - COS301 Capstone Project",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:api": "jest tests/unit/api.test.js --detectOpenHandles --forceExit",
    "test:endpoints": "jest tests/unit/endpoints.test.js --detectOpenHandles --forceExit --verbose",
    "test:workflow": "jest tests/integration/workflow.test.js --detectOpenHandles --forceExit",
    "test:unit": "npm run test:api && npm run test:endpoints",
    "test:integration": "npm run test:workflow",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:debug": "jest --detectOpenHandles --forceExit --verbose --no-coverage",
    "test:ci": "jest --ci --coverage --watchAll=false --detectOpenHandles --forceExit --maxWorkers=2",
    "coverage:report": "jest --coverage --detectOpenHandles --forceExit && open coverage/lcov-report/index.html",
    "coverage:summary": "npm run test:coverage && node scripts/coverage.js",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "express",
    "supabase",
    "api",
    "threat-assessment",
    "backend",
    "security",
    "node.js"
  ],
  "author": "Your Name or Team",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "google-auth-library": "^10.2.1",
    "googleapis": "^160.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "net": "^1.0.2",
    "nodemailer": "^7.0.6",
    "open": "^10.2.0",
    "path": "^0.12.7",
    "pg": "^8.16.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.2.5",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.spec.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "text-summary",
      "json-summary"
    ],
    "collectCoverageFrom": [
      "index.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**",
      "!**/Files/**",
      "!**/scripts/**",
      "!config/**",
      "!controllers/**",
      "!middleware/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 45,
        "functions": 60,
        "lines": 60,
        "statements": 60
      },
      "./index.js": {
        "branches": 50,
        "functions": 65,
        "lines": 67,
        "statements": 67
      }
    },
    "roots": [
      "<rootDir>"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "clearMocks": true,
    "restoreMocks": true,
    "verbose": true,
    "testTimeout": 30000,
    "forceExit": true,
    "detectOpenHandles": true,
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "globals": {
      "process.env.NODE_ENV": "test"
    },
    "bail": false,
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-results",
          "outputName": "junit.xml"
        }
      ]
    ]
  }
}
